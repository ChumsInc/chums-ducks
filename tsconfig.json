{
  "extends": "@tsconfig/node14/tsconfig.json",

  "compilerOptions": {
    "lib": ["dom"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "outDir": "./dist/",
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}
